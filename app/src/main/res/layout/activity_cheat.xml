<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Controller.CheatActivity">

    <TextView
        android:id="@+id/txt_cheating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="از تقلب کردن اطمینان دارید؟ "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txt_true_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        tools:text="اینجا پاسخ سوال نمایان میشود" />

    <Button
        android:id="@+id/btn_show_cheat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="نمایش تقلب" />
</LinearLayout>